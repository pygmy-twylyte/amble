{
  "room": {
    "prefix": "room",
    "body": [
      "room $1 {",
      "  name \"$2\"",
      "  desc \"$3\"",
      "  visited $4",
      "  $0",
      "}"
    ],
    "description": "Create a new room definition"
  },

  "room_full": {
    "prefix": "roomfull",
    "body": [
      "room $1 {",
      "  name \"$2\"",
      "  desc \"$3\"",
      "  visited $4",
      "  exit $5 -> $6",
      "  $0",
      "}"
    ],
    "description": "Create a room with an exit"
  },

  "item": {
    "prefix": "item",
    "body": [
      "item $1 {",
      "  name \"$2\"",
      "  desc \"$3\"",
      "  portable $4",
      "  $0",
      "}"
    ],
    "description": "Create a new item definition"
  },

  "npc": {
    "prefix": "npc",
    "body": [
      "npc $1 {",
      "  name \"$2\"",
      "  desc \"$3\"",
      "  location room $4",
      "  $0",
      "}"
    ],
    "description": "Create a new NPC definition"
  },

  "goal": {
    "prefix": "goal",
    "body": [
      "goal $1 \"$2\"",
      "desc \"$3\"",
      "group $4",
      "done when $5",
      "$0"
    ],
    "description": "Create a new goal definition"
  },

  "goal_complex": {
    "prefix": "goalcomplex",
    "body": [
      "goal $1 \"$2\"",
      "desc \"$3\"",
      "group $4",
      "done when has item $5",
      "done when reached room $6",
      "done when goal complete $7",
      "$0"
    ],
    "description": "Create a goal with multiple conditions"
  },

  "trigger": {
    "prefix": "trigger",
    "body": [
      "trigger $1 {",
      "  condition \"$2\"",
      "  action \"$3\"",
      "  $0",
      "}"
    ],
    "description": "Create a new trigger definition"
  },

  "spinner": {
    "prefix": "spinner",
    "body": [
      "spinner $1 {",
      "  wedge \"$2\" width $3",
      "  wedge \"$4\" width $5",
      "  wedge \"$6\"",
      "  $0",
      "}"
    ],
    "description": "Create a new spinner definition"
  },

  "set": {
    "prefix": "set",
    "body": [
      "let set $1 = ($2, $3, $4)$0"
    ],
    "description": "Create a new set declaration"
  },

  "exit": {
    "prefix": "exit",
    "body": [
      "exit $1 -> $2$0"
    ],
    "description": "Add an exit to a room"
  },

  "done_has_item": {
    "prefix": "doneitem",
    "body": [
      "done when has item $1$0"
    ],
    "description": "Goal completion condition: has item"
  },

  "done_reached_room": {
    "prefix": "doneroom",
    "body": [
      "done when reached room $1$0"
    ],
    "description": "Goal completion condition: reached room"
  },

  "done_has_flag": {
    "prefix": "doneflag",
    "body": [
      "done when has flag $1$0"
    ],
    "description": "Goal completion condition: has flag"
  },

  "done_goal_complete": {
    "prefix": "donegoal",
    "body": [
      "done when goal complete $1$0"
    ],
    "description": "Goal completion condition: goal complete"
  },

  "wedge": {
    "prefix": "wedge",
    "body": [
      "wedge \"$1\" width $2$0"
    ],
    "description": "Add a wedge to a spinner"
  },

  "comment_section": {
    "prefix": "section",
    "body": [
      "# ================================================",
      "# $1",
      "# ================================================",
      "$0"
    ],
    "description": "Create a comment section divider"
  },

  "multiline_desc": {
    "prefix": "desclarge",
    "body": [
      "desc \"\"\"$1",
      "$2",
      "$3\"\"\"$0"
    ],
    "description": "Create a multi-line description"
  },

  "room_template": {
    "prefix": "roomtemplate",
    "body": [
      "# $1 Area",
      "",
      "room $2 {",
      "  name \"$3\"",
      "  desc \"\"\"$4",
      "  $5",
      "  $6\"\"\"",
      "  visited false",
      "  exit $7 -> $8",
      "}",
      "$0"
    ],
    "description": "Complete room template with multi-line description"
  },

  "item_template": {
    "prefix": "itemtemplate",
    "body": [
      "item $1 {",
      "  name \"$2\"",
      "  description \"\"\"$3",
      "  $4",
      "  $5\"\"\"",
      "  portable $6",
      "}",
      "$0"
    ],
    "description": "Complete item template with multi-line description"
  }
}
